<% provide(:title,"Book") %>
<h1>All Book</h1>

<main class="main">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 seach-book-box">
        <%= form_tag(books_path,method: :get) do %>
          <div class="col-xs-10">
            <%= text_field_tag :name, params[:name] %>
          </div>
          <div class="col-xs-2"> 
            <%= submit_tag 'Search' %>
          </div>
        <% end %>
      </div>
      <div class="col-xs-12">
        <%= render "books/list_book"%>
      </div>
    </div>
  </div>
  <div class="row">
</div>
  <%= will_paginate %>
</main> 
